<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="uploadProgress"
            type="com.anubhav.swipetask.models.ProgressStatus" />

        <import type="android.view.View" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/productsCoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/surface_dim"
        tools:context=".ui.fragments.productfeedfragment.ProductFeedFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface_dim">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productFilterNSortConstraintLayout"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/filterProductsTextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableStart="@drawable/baseline_filter_list_24"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/black"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="4dp"
                    android:text="Filter"
                    android:textColor="@color/text_on_white_variant_2"
                    android:textSize="12sp"
                    app:fontFamily="@font/montserrat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.google.android.material.textview.MaterialTextView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/sortProductsTextLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableEnd="@drawable/baseline_sort_24"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/black"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="4dp"
                    android:text="Sort"
                    android:textColor="@color/text_on_white_variant_2"
                    android:textSize="12sp"
                    app:fontFamily="@font/montserrat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.google.android.material.textview.MaterialTextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/progressStatusCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="4dp"
                app:cardBackgroundColor="@color/white"
                android:visibility="@{uploadProgress.active?View.VISIBLE : View.GONE}"
                app:cardCornerRadius="2dp"
                app:cardElevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productFilterNSortConstraintLayout">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/progressStatusConstaintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textualStatusTextValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{uploadProgress.message}"
                        android:textColor="@color/text_on_white_variant_2"
                        android:textSize="12sp"
                        app:fontFamily="@font/montserrat"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Uploading in progress">

                    </com.google.android.material.textview.MaterialTextView>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/progressPercentageTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(uploadProgress.percentage)+`%`}"
                        android:textColor="@color/text_on_white_variant_2"
                        android:textSize="12sp"
                        android:visibility="@{uploadProgress.indeterminate?View.GONE:View.VISIBLE}"
                        app:fontFamily="@font/montserrat"
                        app:layout_constraintBottom_toBottomOf="@id/uploadProgressBar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/uploadProgressBar"
                        tools:text="48%">

                    </com.google.android.material.textview.MaterialTextView>

                    <ProgressBar
                        android:id="@+id/uploadProgressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:indeterminate="@{uploadProgress.indeterminate}"
                        android:indeterminateTint="@color/primary"
                        app:layout_constraintEnd_toStartOf="@id/progressPercentageTextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textualStatusTextValue" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/productsRecyclerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productFilterNSortConstraintLayout"
                tools:listitem="@layout/product_item">

            </androidx.recyclerview.widget.RecyclerView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/productsShimmerLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <include layout="@layout/shimmer_product_item" />

                    <include layout="@layout/shimmer_product_item" />

                    <include layout="@layout/shimmer_product_item" />

                    <include layout="@layout/shimmer_product_item" />

                    <include layout="@layout/shimmer_product_item" />

                    <include layout="@layout/shimmer_product_item" />

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/addProductExtendedFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="18dp"
            android:text="New"
            android:textColor="@color/white"
            android:visibility="gone"
            app:backgroundTint="@color/primary"
            app:elevation="6dp"
            app:icon="@drawable/baseline_add_24"
            app:iconTint="@color/white">

        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>